@model Vivero.Models.Plaga

@{
    ViewData["Title"] = "Editar el Registro de Plagas";
}


<form asp-controller="Plagas" asp-action="Edit" method="POST"> 


    <input type="hidden" asp-for="id" />
    <div class="form-group">
    <label >Nombre de la Plaga</label>
    <input type="text" asp-for="nombreplaga" class="form-control" placeholder="Nombre de la Plaga" required>
    </div>

    <div class="form-group">
    <label >Descripción de la Plaga</label>
    <textarea type="text" asp-for="descripcion" class="form-control" placeholder="Descripción de la Plaga" required>
    </textarea>
    </div>


    <div class="form-group">
    <label >Informacion adicional de la Plaga</label>
    <textarea type="text" asp-for="adicional" class="form-control" placeholder="Informacion adicional de la Plaga" required>
    </textarea>
    </div>

    <button type="submit" class="btn btn-primary">Actualizar Plaga</button>

</form>