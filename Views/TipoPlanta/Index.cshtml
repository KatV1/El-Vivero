@model IEnumerable<Vivero.Models.TipoPlanta>

<h2>Lista Tipos de Planta</h2>

<p>
    <a asp-action="Create" class="btn btn-outline-light">Crear Tipos</a>
</p>
<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
                <th scope="col">
                    Acci√≥n
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Nombre)
                </th> 
        </tr>
    </thead>

    <tbody>

    @if (Model.Count() == 0) {
            <tr>
                <td colspan="5" class="text-center">No se encontraron registros.</td>
            </tr>
    }

    @foreach (var item in Model)
    {
        <tr>
            <th scope="row">
                <a asp-action="Edit" asp-route-id="@item.ID"><i class="fas fa-edit"></i></a> |
                @* <a asp-action="Delete" asp-route-id="@item.ID"><i class="fas fa-trash"></i></a> *@
                @if (item.Deshabilitado==false){
                    <a asp-controller="TipoPlanta" asp-action="Habilitar" asp-route-id="@item.ID" align="center"
                    class="btn btn-outline-success"><i class="fas fa-eye"></i></a>
                }
                else{
                    <a asp-controller="TipoPlanta" asp-action="Habilitar" asp-route-id="@item.ID" align="center"
                    class="btn btn-outline-success"><i class="fas fa-eye-slash"></i></a>
                }
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
        </tr>
    }        
    </tbody>    
</table>