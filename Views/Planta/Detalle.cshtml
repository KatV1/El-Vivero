@model Vivero.Models.Planta

@{
    ViewData["Title"] = "Plantas";
}

<div class="row">
  <div class="col-md-4">
    <h3 class="titulo">@Model.Nombre </h3>
  </div>
</div>
  
<main>
  <div class="content">
      <div class="planta-content">  
        <img src="@Url.Content(Model.ImagenURL)" class="rounded">
        <a href=#>+</a>
      </div>

      <div class="info">
        <div class="texto-info">
          <h4 class="propiedad"><i class="fas fa-temperature-high"></i> Temperatura</h4>
          @Html.DisplayFor(modelItem => Model.TemperaturaIdeal)
        </div>

        <div class="texto-info">
          <h4 class="propiedad"><i class="fas fa-tint"></i> Riego</h4>
          @Html.DisplayFor(modelItem => Model.Riego)
        </div>

        <div class="texto-info">
          <h4 class="propiedad"><i class="fas fa-lightbulb"></i> Tips</h4>
          @Html.DisplayFor(modelItem => Model.Tips)
        </div>
      </div>
  </div> 
</main>
