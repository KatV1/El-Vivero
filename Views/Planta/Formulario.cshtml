@model Vivero.Models.Planta

@{
    ViewData["Title"] = "Agregar Planta";
}


<div class="row">
    <div class="col-md-4">  
        <h3 class="titulo">Ingresar Planta </h3></p>

        <form asp-controller="Planta" asp-action="Formulario">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>    
          
            <div class="form-group">
                <label asp-for="Imagen" class="control-label"></label>
                <input type="file" asp-for="Imagen" class="form-control" accept="image/*"/>
            </div>               
                   
            <div class="form-group">
                <label asp-for="Precio" class="control-label"></label>
                <input asp-for="Precio" class="form-control" />
            </div>               

            <div class="form-group">
                <label asp-for="Stock" class="control-label"></label>
                <input asp-for="Stock" class="form-control" />
            </div>                                   

            <div class="form-group">
                <label asp-for="TemperaturaAplanta" class="control-label"></label>
                <input asp-for="TemperaturaAplanta" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="TemperaturaBplanta" class="control-label"></label>
                <input asp-for="TemperaturaBplanta" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Riego" class="control-label"></label>
                <input asp-for="Riego" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Tips" class="control-label"></label>
                <input asp-for="Tips" class="form-control" />
            </div>

            <div class="form-group">
                 <button type="submit"  class="btn btn-success">Cargar</button> 
            </div>                

        </form>
            


        <td></td>    
        <td>@Html.DisplayTextFor(model => model.Respuesta)</td>    
    


    </div>
</div>


